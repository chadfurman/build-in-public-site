---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  tags?: string[];
  heroImage?: string;
}

const { title, description, pubDate, author, tags, heroImage } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Build in the Open`} description={description} heroImage={heroImage}>
  <article class="blog-post">
    {heroImage && <img class="hero-image" src={heroImage} alt="" />}
    <header>
      <h1>{title}</h1>
      <div class="meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span class="author">by {author}</span>
      </div>
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 42rem;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero-image {
    width: 100%;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .meta {
    color: var(--color-muted);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .meta .author {
    margin-left: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .tag {
    background: var(--color-surface);
    color: var(--color-muted);
    padding: 0.2rem 0.6rem;
    border-radius: 0.25rem;
    font-size: 0.8rem;
  }

  .content {
    line-height: 1.75;
  }

  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .content :global(p) {
    margin-bottom: 1.25rem;
  }

  .content :global(pre) {
    background: var(--color-surface);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .content :global(code) {
    font-size: 0.9em;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.25rem 0;
    color: var(--color-muted);
    font-style: italic;
  }
</style>
