---
import BaseLayout from './BaseLayout.astro';
import { formatDateLong, formatDatetimeAttr } from '../utils/dates';

interface PostLink {
  slug: string;
  title: string;
}

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  tags?: string[];
  heroImage?: string;
  prevPost?: PostLink | null;
  nextPost?: PostLink | null;
}

const { title, description, pubDate, author, tags, heroImage, prevPost, nextPost } = Astro.props;

const formattedDate = formatDateLong(pubDate);
---

<BaseLayout title={`${title} | Build in the Open`} description={description} heroImage={heroImage}>
  <article class="blog-post">
    {heroImage && <img class="hero-image" src={heroImage} alt="" />}
    <header>
      <div class="post-meta-top">
        <a href="/" class="back-link">
          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
            <path d="M11 7H3M6 4L3 7l3 3" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Back
        </a>
      </div>
      <h1>{title}</h1>
      <div class="meta">
        <time datetime={formatDatetimeAttr(pubDate)}>{formattedDate}</time>
        <span class="meta-dot" aria-hidden="true"></span>
        <span class="author">{author}</span>
      </div>
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="content">
      <slot />
    </div>
    <footer class="post-footer">
      <div class="footer-line" aria-hidden="true"></div>
      <nav class="post-nav">
        {prevPost ? (
          <a href={`/blog/${prevPost.slug}/`} class="post-nav-link prev">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
              <path d="M11 7H3M6 4L3 7l3 3" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="post-nav-text">
              <span class="post-nav-label">Previous</span>
              <span class="post-nav-title">{prevPost.title}</span>
            </span>
          </a>
        ) : <div />}
        {nextPost ? (
          <a href={`/blog/${nextPost.slug}/`} class="post-nav-link next">
            <span class="post-nav-text">
              <span class="post-nav-label">Next</span>
              <span class="post-nav-title">{nextPost.title}</span>
            </span>
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
              <path d="M3 7h8M8 4l3 3-3 3" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        ) : <div />}
      </nav>
      <a href="/" class="back-home">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
          <path d="M11 7H3M6 4L3 7l3 3" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        All entries
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem var(--gutter) 4rem;
    animation: fadeUp 0.6s ease both;
  }

  .hero-image {
    width: 100%;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border: 1px solid var(--color-border);
  }

  .post-meta-top {
    margin-bottom: 2rem;
  }

  .back-link {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-muted);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.8rem);
    line-height: 1.15;
    font-weight: 400;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    color: var(--color-muted);
    font-family: var(--font-mono);
    font-size: 0.78rem;
    margin-bottom: 0.75rem;
  }

  .meta-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--color-border-hover);
  }

  .tags {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--color-accent);
    opacity: 0.7;
  }

  /* Content styles */
  .content {
    line-height: 1.8;
    font-size: 1.02rem;
  }

  .content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.6rem;
    font-weight: 400;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  .content :global(h3) {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 400;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .content :global(p) {
    margin-bottom: 1.4rem;
    color: var(--color-text-secondary);
  }

  .content :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: rgba(163, 247, 191, 0.3);
    text-underline-offset: 2px;
    transition: text-decoration-color 0.2s ease;
  }

  .content :global(a:hover) {
    text-decoration-color: var(--color-accent);
  }

  .content :global(pre) {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: 1.25rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.4rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.88em;
  }

  .content :global(:not(pre) > code) {
    background: var(--color-surface);
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
    border: 1px solid var(--color-border);
    font-size: 0.85em;
    color: var(--color-accent);
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.4rem;
    padding-left: 1.5rem;
    color: var(--color-text-secondary);
  }

  .content :global(li) {
    margin-bottom: 0.4rem;
  }

  .content :global(li::marker) {
    color: var(--color-accent);
    opacity: 0.5;
  }

  .content :global(blockquote) {
    border-left: 2px solid var(--color-accent);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
    font-family: var(--font-display);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .content :global(hr) {
    border: none;
    height: 1px;
    background: var(--color-border);
    margin: 2.5rem 0;
  }

  /* Post footer */
  .post-footer {
    margin-top: 3rem;
  }

  .footer-line {
    height: 1px;
    background: var(--color-border);
    margin-bottom: 1.5rem;
  }

  .post-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .post-nav-link {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    background: var(--color-bg-elevated);
    transition: border-color 0.2s ease;
    max-width: 50%;
  }

  .post-nav-link:hover {
    border-color: var(--color-accent);
  }

  .post-nav-link.next {
    margin-left: auto;
    text-align: right;
  }

  .post-nav-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .post-nav-label {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted);
  }

  .post-nav-title {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    line-height: 1.3;
  }

  .post-nav-link:hover .post-nav-title {
    color: var(--color-accent);
  }

  .back-home {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--color-muted);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    transition: color 0.2s ease;
  }

  .back-home:hover {
    color: var(--color-accent);
  }
</style>
