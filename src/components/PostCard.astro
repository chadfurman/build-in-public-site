---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  tags?: string[];
  slug: string;
}

const { title, description, pubDate, author, tags, slug } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={`/blog/${slug}/`} class="post-card">
  <article>
    <div class="card-top">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      <span class="author">{author}</span>
    </div>
    <h2>{title}</h2>
    <p>{description}</p>
    {tags && tags.length > 0 && (
      <div class="tags">
        {tags.map((tag) => (
          <span class="tag">#{tag}</span>
        ))}
      </div>
    )}
    <span class="read-more">
      Read entry
      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
        <path d="M3 7h8M8 4l3 3-3 3" stroke="currentColor" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </span>
  </article>
</a>

<style>
  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: 1.5rem;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
    position: relative;
    overflow: hidden;
    animation: fadeUp 0.6s ease both;
  }

  .post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 0;
    background: var(--color-accent);
    transition: height 0.3s ease;
    border-radius: 0 0 2px 0;
  }

  .post-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: 0 0 30px var(--color-accent-dim);
    transform: translateY(-1px);
  }

  .post-card:hover::before {
    height: 100%;
  }

  .card-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.6rem;
  }

  time {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--color-muted);
    letter-spacing: 0.02em;
  }

  .author {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--color-muted);
    opacity: 0.7;
  }

  h2 {
    font-family: var(--font-display);
    font-size: 1.35rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    line-height: 1.3;
  }

  p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin: 0 0 0.85rem;
    line-height: 1.55;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 0.75rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.68rem;
    color: var(--color-accent);
    opacity: 0.7;
    letter-spacing: 0.01em;
  }

  .read-more {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-muted);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    transition: color 0.2s ease, gap 0.2s ease;
  }

  .post-card:hover .read-more {
    color: var(--color-accent);
    gap: 0.6rem;
  }
</style>
