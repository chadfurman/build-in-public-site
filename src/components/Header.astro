---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/todo/', label: 'TODO' },
  { href: '/rss.xml', label: 'RSS' },
];
---

<header class="site-header">
  <nav>
    <a href="/" class="site-title">
      <span class="logo-mark" aria-hidden="true">
        <svg viewBox="0 0 80 80" fill="none" width="22" height="22">
          <ellipse cx="40" cy="28" rx="16" ry="18" fill="#13161c" stroke="currentColor" stroke-width="2" />
          <rect x="28" y="24" width="24" height="5" rx="2.5" fill="currentColor" opacity="0.85">
            <animate attributeName="opacity" values="0.85;0.5;0.85" dur="4s" repeatCount="indefinite" />
          </rect>
          <path d="M28 46 Q28 40 32 38 L40 36 L48 38 Q52 40 52 46 L52 58 Q52 62 48 62 L32 62 Q28 62 28 58 Z" fill="#13161c" stroke="currentColor" stroke-width="2" />
          <line x1="36" y1="44" x2="36" y2="56" stroke="currentColor" stroke-width="1.5" opacity="0.4" />
          <line x1="44" y1="44" x2="44" y2="56" stroke="currentColor" stroke-width="1.5" opacity="0.4" />
          <line x1="33" y1="50" x2="47" y2="50" stroke="currentColor" stroke-width="1.5" opacity="0.3" />
        </svg>
      </span>
      <span class="title-text">build<span class="accent">_</span>aloud</span>
    </a>
    <div class="nav-right">
      <ul>
        {navLinks.map(({ href, label }) => (
          <li><a href={href}>{label}</a></li>
        ))}
      </ul>
      <span class="status-dot" aria-hidden="true" title="Live"></span>
    </div>
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem var(--gutter);
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(12, 14, 18, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    animation: fadeIn 0.6s ease;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    color: var(--color-text);
  }

  .site-title:hover {
    color: var(--color-text);
  }

  .logo-mark {
    color: var(--color-accent);
    display: flex;
    align-items: center;
  }

  .title-text {
    font-family: var(--font-mono);
    font-weight: 500;
    font-size: 0.85rem;
    letter-spacing: -0.01em;
  }

  .accent {
    color: var(--color-accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 1.25rem;
    margin: 0;
    padding: 0;
  }

  ul a {
    text-decoration: none;
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: 0.78rem;
    letter-spacing: 0.03em;
    text-transform: lowercase;
    padding: 0.3rem 0;
    position: relative;
    transition: color 0.2s ease;
  }

  ul a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width 0.25s ease;
  }

  ul a:hover {
    color: var(--color-accent);
  }

  ul a:hover::after {
    width: 100%;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-accent);
    box-shadow: 0 0 6px var(--color-accent);
    animation: pulse 2.5s ease-in-out infinite;
  }
</style>
