---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/rss.xml', label: 'RSS' },
];
---

<header class="site-header">
  <nav>
    <a href="/" class="site-title">
      <span class="logo-mark" aria-hidden="true">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <rect x="1" y="1" width="18" height="18" rx="3" stroke="currentColor" stroke-width="1.5"/>
          <path d="M6 10h8M10 6v8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </span>
      <span class="title-text">build<span class="accent">_</span>in<span class="accent">_</span>the<span class="accent">_</span>open</span>
    </a>
    <div class="nav-right">
      <ul>
        {navLinks.map(({ href, label }) => (
          <li><a href={href}>{label}</a></li>
        ))}
      </ul>
      <span class="status-dot" aria-hidden="true" title="Live"></span>
    </div>
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem var(--gutter);
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(12, 14, 18, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    animation: fadeIn 0.6s ease;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    color: var(--color-text);
  }

  .site-title:hover {
    color: var(--color-text);
  }

  .logo-mark {
    color: var(--color-accent);
    display: flex;
    align-items: center;
  }

  .title-text {
    font-family: var(--font-mono);
    font-weight: 500;
    font-size: 0.85rem;
    letter-spacing: -0.01em;
  }

  .accent {
    color: var(--color-accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 1.25rem;
    margin: 0;
    padding: 0;
  }

  ul a {
    text-decoration: none;
    color: var(--color-muted);
    font-family: var(--font-mono);
    font-size: 0.78rem;
    letter-spacing: 0.03em;
    text-transform: lowercase;
    padding: 0.3rem 0;
    position: relative;
    transition: color 0.2s ease;
  }

  ul a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width 0.25s ease;
  }

  ul a:hover {
    color: var(--color-accent);
  }

  ul a:hover::after {
    width: 100%;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-accent);
    box-shadow: 0 0 6px var(--color-accent);
    animation: pulse 2.5s ease-in-out infinite;
  }
</style>
