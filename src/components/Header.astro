---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/rss.xml', label: 'RSS' },
];
---

<header class="site-header">
  <nav>
    <a href="/" class="site-title">Build in the Open</a>
    <ul>
      {navLinks.map(({ href, label }) => (
        <li><a href={href}>{label}</a></li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem;
  }

  nav {
    max-width: 42rem;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-weight: 700;
    font-size: 1.1rem;
    text-decoration: none;
    color: var(--color-text);
  }

  ul {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }

  ul a {
    text-decoration: none;
    color: var(--color-muted);
    font-size: 0.9rem;
  }

  ul a:hover {
    color: var(--color-text);
  }
</style>
