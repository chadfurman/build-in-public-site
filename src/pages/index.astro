---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Build in the Open">
  <section class="hero">
    <h1>Building in the Open</h1>
    <p>
      Following the journey of building an AI business from zero to $10K/month.
      Every decision, every pivot, every lesson â€” documented as it happens.
    </p>
  </section>

  <section class="posts">
    {posts.length === 0 ? (
      <p class="empty">No posts yet. Stay tuned!</p>
    ) : (
      posts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          author={post.data.author}
          tags={post.data.tags}
          slug={post.id}
        />
      ))
    )}
  </section>

  <NewsletterSignup />
</BaseLayout>

<style>
  .hero {
    max-width: 42rem;
    margin: 0 auto;
    padding: 3rem 1rem 2rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .hero p {
    color: var(--color-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 32rem;
    margin: 0 auto;
  }

  .posts {
    max-width: 42rem;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .empty {
    text-align: center;
    color: var(--color-muted);
    padding: 2rem;
  }
</style>
