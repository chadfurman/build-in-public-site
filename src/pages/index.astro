---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Build in the Open">
  <section class="hero">
    <div class="hero-inner">
      <div class="hero-badge">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
          <circle cx="7" cy="7" r="3" fill="currentColor"/>
          <circle cx="7" cy="7" r="6" stroke="currentColor" stroke-width="1" opacity="0.4"/>
        </svg>
        <span>Day 1 â€” The journey starts here</span>
      </div>
      <h1>
        Building<br/>
        <em>in the open</em>
      </h1>
      <p class="hero-desc">
        From zero to $10K/month. Every decision, every pivot, every lesson&mdash;documented as it happens. No vanity metrics. Real numbers.
      </p>
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-value">$0</span>
          <span class="stat-label">MRR</span>
        </div>
        <div class="stat-divider" aria-hidden="true"></div>
        <div class="stat">
          <span class="stat-value">{posts.length}</span>
          <span class="stat-label">{posts.length === 1 ? 'Post' : 'Posts'}</span>
        </div>
        <div class="stat-divider" aria-hidden="true"></div>
        <div class="stat">
          <span class="stat-value">$10K</span>
          <span class="stat-label">Goal</span>
        </div>
      </div>
    </div>
    <div class="hero-decoration" aria-hidden="true">
      <svg viewBox="0 0 200 200" fill="none" class="hero-svg">
        <circle cx="100" cy="100" r="80" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.2"/>
        <circle cx="100" cy="100" r="60" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.15"/>
        <circle cx="100" cy="100" r="40" stroke="var(--color-accent)" stroke-width="0.5" opacity="0.1"/>
        <line x1="20" y1="100" x2="180" y2="100" stroke="var(--color-accent)" stroke-width="0.3" opacity="0.15"/>
        <line x1="100" y1="20" x2="100" y2="180" stroke="var(--color-accent)" stroke-width="0.3" opacity="0.15"/>
        <circle cx="100" cy="100" r="4" fill="var(--color-accent)" opacity="0.6"/>
        <circle cx="140" cy="60" r="2" fill="var(--color-hot)" opacity="0.5"/>
        <circle cx="65" cy="135" r="2" fill="var(--color-accent)" opacity="0.3"/>
      </svg>
    </div>
  </section>

  <section class="posts-section">
    <div class="section-header">
      <h2>
        <span class="section-label">// log</span>
      </h2>
    </div>
    <div class="posts">
      {posts.length === 0 ? (
        <p class="empty">No posts yet. Stay tuned.</p>
      ) : (
        posts.map((post, i) => (
          <PostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            author={post.data.author}
            tags={post.data.tags}
            slug={post.id}
          />
        ))
      )}
    </div>
  </section>

  <NewsletterSignup />
</BaseLayout>

<style>
  .hero {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 4rem var(--gutter) 3rem;
    position: relative;
    animation: fadeUp 0.7s ease both;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-accent);
    background: var(--color-accent-dim);
    padding: 0.35rem 0.85rem;
    border-radius: 2rem;
    border: 1px solid rgba(163, 247, 191, 0.15);
    margin-bottom: 1.5rem;
    animation: slideIn 0.6s ease 0.2s both;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2.8rem, 6vw, 4.2rem);
    line-height: 1.05;
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }

  h1 em {
    font-style: italic;
    background: linear-gradient(135deg, var(--color-accent), #7df0a8, var(--color-accent));
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 6s ease infinite;
  }

  .hero-desc {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    line-height: 1.65;
    max-width: 28rem;
    margin-bottom: 2rem;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    animation: fadeUp 0.7s ease 0.4s both;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .stat-value {
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.3rem;
    color: var(--color-text);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted);
  }

  .stat-divider {
    width: 1px;
    height: 2rem;
    background: var(--color-border);
  }

  .hero-decoration {
    position: absolute;
    top: 50%;
    right: var(--gutter);
    transform: translateY(-50%);
    width: 160px;
    height: 160px;
    animation: fadeIn 1.2s ease 0.5s both;
    pointer-events: none;
  }

  .hero-svg {
    width: 100%;
    height: 100%;
    animation: spin 60s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .posts-section {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter);
  }

  .section-header {
    margin-bottom: 1.5rem;
    animation: fadeUp 0.7s ease 0.3s both;
  }

  .section-label {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-muted);
    letter-spacing: 0.02em;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .empty {
    text-align: center;
    color: var(--color-muted);
    padding: 3rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
  }

  @media (max-width: 640px) {
    .hero {
      grid-template-columns: 1fr;
      padding: 2.5rem var(--gutter) 2rem;
    }

    .hero-decoration {
      display: none;
    }

    .hero-stats {
      gap: 1rem;
    }
  }
</style>
