---
import { getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const posts = (await getCollection('blog', ({ data }) => !data.draft))
    .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf() || a.id.localeCompare(b.id));
  return posts.map((post, i) => ({
    params: { slug: post.id },
    props: {
      post,
      prevPost: posts[i - 1] ? { slug: posts[i - 1].id, title: posts[i - 1].data.title } : null,
      nextPost: posts[i + 1] ? { slug: posts[i + 1].id, title: posts[i + 1].data.title } : null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);
---

<BlogPost
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  author={post.data.author}
  tags={post.data.tags}
  heroImage={post.data.heroImage}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Content />
</BlogPost>
